<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8EEE7"
    tools:context=".Info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="151dp"
                android:gravity="center"
                app:srcCompat="@drawable/mabl" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Contacto Email:"
                android:fontFamily="@font/fuente4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#a10684" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="MABL_Company@gmail.com"
                android:fontFamily="@font/fuente4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#49274A" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Telefono:"
                android:fontFamily="@font/fuente4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#a10684" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="971-175-6829"
                android:fontFamily="@font/fuente4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#49274A" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>